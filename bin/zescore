#!/bin/bash
#
# ZeScore startup service script
# USAGE: start|stop|status|logs
#
# INSTALL: sudo cp zescore /etc/init.d/; sudo chmod +x /etc/init.d/zescore
# LAUNCH:  sudo service zescore start
# 
# /!\ depends on node supervisor.
# npm install supervisor -g
if [ "$USER" != "root" ]
then
  echo "You must be root"
  echo "Usage: $0 {start|stop|status|logs}"
  exit 1
fi
case "$1" in
start)
echo "Starting ZeScore Api."
sudo su node -c 'date > /tmp/supervisor.log'
sudo su node -c '/usr/bin/supervisor -w /opt/web/zescore/server/ /opt/web/zescore/server/server.js &>> /tmp/supervisor.log &'
;;
stop)
echo "Stopping ZeScore Api."
sudo pkill -f '.*supervisor.*'
sleep 1
sudo pkill -9 -f '.*supervisor.*'
;;
logs)
echo "Zescore supervisor log."
sudo cat /tmp/supervisor.log
;;
status)
# Check to see if the process is running
sudo pgrep '.*supervisor.*'
;;
 
*)
echo “Zescore service”
echo $”Usage: $0 {start|stop|status|logs}”
exit 1
esac
exit 0